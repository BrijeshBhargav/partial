@model MVCWebAppHTD3.Models.FamilyModel
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <title></title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
</head>

<div class="wrapper " id="address">

   <form id="my_form" asp-action="insert2" method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#address" data-ajax-url="@Url.Action("insert2","partial")">
        <div class="form-right">
            <h2 class="text-uppercase">Family Details</h2>
            <div class="row">
            </div>
            <div class="col-md-3 mb-3">
                <label>DoorNo</label>
                    @Html.TextBoxFor(model => model.DoorNo, new { @class = "form-control", placeholder="Enter DoorNo" })
            </div>

            <div class="col-md-3 mb-3">
                <label>Father Name</label>
                @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control", placeholder="Enter Father Name" })
            </div>
            <div class="col-md-3 mb-3">
                <label>Mother Name</label>
                @Html.TextBoxFor(model => model.MotherName, new { @class = "form-control", placeholder="Enter Mother Name" })
            </div>
        </div>

        <div class="form-field">
            <input type="submit" value="submit" class="btn btn-success" />
                <div>
                    @Html.ActionLink("Back to List", "Display3")
                </div>
            </div>
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
            <div>
                <h3>@ViewBag.Message</h3>
            </div>
        </div>
        </form>

    </div>
   