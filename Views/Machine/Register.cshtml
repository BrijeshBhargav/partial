@using MVCWebAppHTD3.Models;
@model Machine
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


    <section class="background-radial-gradient overflow-hidden">
        <style>
            .background-radial-gradient {
                background-color: hsl(218, 41%, 15%);
                background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
            }

            #radius-shape-1 {
                height: 220px;
                width: 220px;
                top: -60px;
                left: -130px;
                background: radial-gradient(#44006b, #ad1fff);
                overflow: hidden;
            }

            #radius-shape-2 {
                border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
                bottom: -60px;
                right: -110px;
                width: 300px;
                height: 300px;
                background: radial-gradient(#44006b, #ad1fff);
                overflow: hidden;
            }

            .bg-glass {
                background-color: hsla(0, 0%, 100%, 0.9) !important;
                backdrop-filter: saturate(200%) blur(25px);
            }
        </style>
</head>
<body>
    <section>
        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                        Welcome To <br />
                        <span style="color: hsl(218, 81%, 75%)">Aglie Tech Test</span>
                    </h1>
                    <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                        @*Lorem ipsum dolor, sit amet consectetur adipisicing elit.
                        Temporibus, expedita iusto veniam atque, magni tempora mollitia
                        dolorum consequatur nulla, neque debitis eos reprehenderit quasi
                        ab ipsum nisi dolorem modi. Quos?*@
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                    <div class="card bg-glass">
                        <div class="card-body px-4 py-5 px-md-5">
                            @using (Html.BeginForm("Register", "Machine", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label"><b> Name<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-5 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.Name, new { placeholder="Enter Name" })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label"><b> Mobile <span class="text-danger">*</span></b></label>
                                    <div class="col-sm-5 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.Ph_no, new { placeholder="Enter Mobile no" })
                                            @Html.ValidationMessageFor(model => model.Ph_no, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label"><b> Idproof<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-6 inputGroupContainer">
                                        <div class="input-group">
                                        @Html.ValidationMessageFor(model => model.Idproof, "", new { @class = "text-danger" })
                                        @Html.DropDownListFor(model => model.Idproof, new List<SelectListItem>

                                    {

                                    new SelectListItem { Text="Aadhar",Value="Aadhar"},
                                    new SelectListItem { Text="Pan",Value="pan"},

                                        }, new { @class = "form-group" })
                                    </div>
                                </div>
                                </div>
                            
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label"><b> Adhar/pan<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-5 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.IdRoof_No, new { placeholder="Enter Idproof_No" })
                                            @Html.ValidationMessageFor(model => model.IdRoof_No, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                              <div class="form-group row">
                                    <label class="col-sm-3 col-form-label"><b> Member Id<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-5 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.Member_id, new { placeholder="Enter Member id" })
                                            @Html.ValidationMessageFor(model => model.Member_id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label"><b> Join Date<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-5 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Joining_Date, new { placeholder="Enter Joining Date" })
                                            @Html.ValidationMessageFor(model => model.Joining_Date, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <p><label><h4><u><b>Upload Photo</b></u></h4></label></p>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label"><b>Select File</b></label>
                                    <div class="col-sm-5 inputGroupContainer">
                                        <div class="input-group">

                                            <input type="file" name="PostedFiles" multiple />
                                        </div>
                                    </div>
                                </div>                               
                                <button type="submit" class="btn btn-success btn-sm mb-1">Submit</button>
                                @Html.ActionLink("Back To List","Display","Machine")
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
